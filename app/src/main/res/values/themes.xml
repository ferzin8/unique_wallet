<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UniqueWallet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brandColor</item>
        <item name="colorPrimaryVariant">@color/uniqueTextLight</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/brandColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.UniqueWallet.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UniqueWallet.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.UniqueWallet.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.UniqueWallet.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimationDuration">1500</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/unique_logo_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.UniqueWallet.NoActionBar</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/unique_text_light</item>
    </style>
</resources>